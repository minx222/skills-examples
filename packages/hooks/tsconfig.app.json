{
	"extends": "@vue/tsconfig/tsconfig.dom.json",
	"include": [
		"env.d.ts",
		"src/**/*",
		"src/**/*.vue",
		"./typesImport.d.ts",
		"./typed-router.d.ts"
	],
	"exclude": ["src/**/__tests__/*"],
	"compilerOptions": {
		"moduleResolution": "Bundler",
		"composite": true,
		"tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"]
		}
	}
}
